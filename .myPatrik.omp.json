{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh3/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "red",
          "powerline_symbol": "",
          "properties": {
            "postfix": " ",
            "prefix": "",
            "root_icon": ""
          },
          "style": "plain",
          "type": "root"
        },
        {
          "foreground": "cyan",
          "properties": {
            "folder_icon": "",
            "folder_separator_icon": "/",
            "home_icon": "~",
            "postfix": "",
            "prefix": "",
            "style": "agnoster"
          },
          "style": "plain",
          "type": "path"
        },
        {
          "foreground": "green",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}yellow{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}red{{ end }}",
            "{{ if gt .Ahead 0 }}red{{ end }}",
            "{{ if gt .Behind 0 }}green{{ end }}"
          ],
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "github_icon": " ",
            "postfix": "",
            "prefix": " on ",
            "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }}<red>  {{ .Working.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<yellow>  {{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }}"
          },
          "style": "plain",
          "type": "git"
        },
        {
          "foreground": "magenta",
          "properties": {
            "prefix": " [.NET] "
          },
          "style": "plain",
          "type": "dotnet"
        },
        {
          "foreground": "green",
          "properties": {
            "display_mode": "always",
            "display_version": false,
            "display_virtual_env": true,
            "prefix": "  "
          },
          "style": "powerline",
          "type": "python"
        },
        {
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}{{end}}",
            "{{if eq \"Discharging\" .State.String}}{{end}}",
            "{{if eq \"Full\" .State.String}}{{end}}"
          ],
          "foreground": "lightGreen",
          "properties": {
            "charged_icon": " ",
            "charging_icon": " ",
            "discharging_icon": " ",
            "postfix": " "
          },
          "style": "plain",
          "type": "battery"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "darkGray",
          "properties": {
            "prefix": "",
            "time_format": "15:04"
          },
          "style": "plain",
          "type": "time"
        },
        {
          "foreground": "darkGray",
          "properties": {
            "postfix": "",
            "prefix": "",
            "text": "❯"
          },
          "style": "plain",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true
}
